<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="203dp"
            android:layout_height="285dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.002"
            app:srcCompat="@drawable/black_clover" />

        <TextView
            android:id="@+id/title_comic_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Black Clover"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/genre_comic_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Genre"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/date_comic_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="16 Februari 2015"
            app:layout_constraintEnd_toEndOf="@+id/title_comic_detail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/title_comic_detail"
            app:layout_constraintTop_toBottomOf="@+id/title_comic_detail" />

        <TextView
            android:id="@+id/sinopsis_detail_comic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Sinopsis"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/genre_comic_detail"
            app:layout_constraintStart_toStartOf="@+id/genre_comic_detail"
            app:layout_constraintTop_toBottomOf="@+id/genre_comic_detail" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Judul Komik"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/title_comic_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_comic_detail" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Genre Komik"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/genre_comic_detail"
            app:layout_constraintStart_toStartOf="@+id/genre_comic_detail"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Sinopsis Komik"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/sinopsis_detail_comic"
            app:layout_constraintEnd_toEndOf="@+id/sinopsis_detail_comic"
            app:layout_constraintStart_toStartOf="@+id/sinopsis_detail_comic" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Rilis Komik"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/date_comic_detail"
            app:layout_constraintEnd_toEndOf="@+id/date_comic_detail"
            app:layout_constraintStart_toStartOf="@+id/date_comic_detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
